#!/bin/bash
# git using variables
echo -e "Please enter git hub username: "
read USER
echo -e "Please enter github token: "
read TOKEN
echo -e "Please enter REPONAME:"
read REPONAME
cd /Your/Directory/Here
git clone https://$TOKEN:x-oauth-basic@github.com/$USER/$REPONAME
ls
echo -e "Press ENTER to continue..."
read tmp
echo -e "Creating a virtual environment..."
cd $REPONAME
python3.9 -m venv env
echo -e "Activating..."
. env/bin/activate
echo -e "Installing requirements..."
pip install -r requirements.txt
echo -e "Press ENTER to run bot.py..."
read tmp
python3.9 bot.py &
disown %1
